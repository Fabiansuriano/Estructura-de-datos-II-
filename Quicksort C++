#include <iostream>
using namespace std;

void Quicksort(int* arr, int izq, int der)
{
     
     int i = izq, j = der, tmp;
     int p = arr[(izq + der) /2];
 while(i <=j)
     {
         while (arr[i] < p) i++;
         while (arr[j] < p) i++;
         if (i <=j)
         {
               tmp =arr[i];
               arr[i] = arr[j];
               arr[j] = tmp;
               i++; j==;
               }
         }    
     
     if (izq < j)
              Quicksort(arr, izq, j);
          if (i < der)
               Quicksort(arr, i, der);    
     
     
 }
 int main()
 {
     
     cout<< " Este es el metodo Quicksort \n\n";
     cout<< " Esta es la lista a ordenar \n\n";
     cout<< " 54,26,93,17,77,31,44,55,20 \n\n";
     cout<< " La lista de abajo ya se ha ordenado \n\n";
      int arreglo[9 = {54,26,93,17,77,31,44,55,20};
      
      Quicksort(arreglo, 0, 9);
      
      for(int i = 0; i < 9; i++)
           cout << arreglo[i] << " ";
           
      system ("pause");
      return 0;
     
 }
